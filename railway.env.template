# =============================================================================
# Railway Environment Variables Template
# =============================================================================
# Copy these variables to Railway Dashboard > Variables tab
# DO NOT commit this file with real values to version control

# =============================================================================
# AWS Configuration (REQUIRED)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=adobe-analytics-rag-docs-your-unique-name

# =============================================================================
# Bedrock Configuration (REQUIRED)
# =============================================================================
BEDROCK_KNOWLEDGE_BASE_ID=your_kb_id_here
BEDROCK_REGION=us-east-1
BEDROCK_MODEL_ID=us.anthropic.claude-3-7-sonnet-20250219-v1:0
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v2:0

# =============================================================================
# Adobe Analytics API Configuration (REQUIRED)
# =============================================================================
ADOBE_CLIENT_ID=your_adobe_client_id_here
ADOBE_CLIENT_SECRET=your_adobe_client_secret_here
ADOBE_ORGANIZATION_ID=your_adobe_organization_id_here

# =============================================================================
# Database Configuration (Railway sets this automatically)
# =============================================================================
# DATABASE_URL is set automatically by Railway when you add PostgreSQL
# No need to set this manually

# =============================================================================
# Application Configuration (OPTIONAL)
# =============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# =============================================================================
# Railway-Specific Configuration
# =============================================================================
# These are set automatically by Railway
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=your_project_id
# RAILWAY_SERVICE_ID=your_service_id
