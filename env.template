# =============================================================================
# Adobe Analytics RAG Chatbot - Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive information

# =============================================================================
# AWS Configuration
# =============================================================================
# Required for S3 storage and Bedrock Knowledge Base
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=adobe-analytics-rag-docs-your-unique-name

# Optional: AWS Profile (alternative to access keys)
# AWS_PROFILE=your_aws_profile_name

# =============================================================================
# Adobe Analytics API Configuration (OAuth Server-to-Server)
# =============================================================================
# Get these from Adobe Developer Console: https://developer.adobe.com/
# Create OAuth Server-to-Server credentials (JWT deprecated as of June 2025)
ADOBE_CLIENT_ID=your_adobe_client_id_here
ADOBE_CLIENT_SECRET=your_adobe_client_secret_here
ADOBE_ORGANIZATION_ID=your_adobe_organization_id_here

# Note: JWT authentication with private keys is deprecated
# Adobe now requires OAuth Server-to-Server credentials

# =============================================================================
# AI/LLM Configuration
# =============================================================================
# Option 1: OpenAI (uncomment to use)
# OPENAI_API_KEY=your_openai_api_key_here

# Option 2: AWS Bedrock (recommended for AWS-native setup)
BEDROCK_MODEL_ID=anthropic.claude-3-5-sonnet-20241022-v2:0
BEDROCK_REGION=us-east-1
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1

# Available Bedrock Models (Latest Versions):
# Text Generation Models:
# - anthropic.claude-3-5-sonnet-20241022-v2:0 (recommended - best balance)
# - anthropic.claude-3-7-sonnet-20250219-v1:0 (latest - most capable)
# - anthropic.claude-3-5-haiku-20241022-v1:0 (fast, cost-effective)
# - anthropic.claude-3-haiku-20240307-v1:0 (legacy haiku)
#
# Embedding Models:
# - amazon.titan-embed-text-v1 (recommended for Knowledge Base)
# - amazon.titan-embed-text-v2 (alternative embedding model)
# - anthropic.claude-3-5-sonnet-20241022-v2:0 (latest Sonnet)
# - amazon.titan-text-express-v1 (Amazon's model)
# - meta.llama2-13b-chat-v1 (Meta's Llama2)
# - meta.llama3-8b-instruct-v1:0 (Meta's Llama3)

# Alternative: Use Azure OpenAI (uncomment and configure if using Azure)
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_API_KEY=your_azure_openai_key_here
# AZURE_OPENAI_API_VERSION=2024-02-15-preview
# AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# =============================================================================
# Application Configuration
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# Database Configuration
# SQLite (default) - no additional setup required
DATABASE_URL=sqlite:///./adobe_analytics_rag.db

# PostgreSQL (uncomment and configure if using PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/adobe_analytics_rag

# =============================================================================
# Streamlit Configuration
# =============================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# =============================================================================
# RAG (Retrieval-Augmented Generation) Configuration
# =============================================================================
# Text chunking parameters
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Embedding model (sentence-transformers models)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Vector store configuration
VECTOR_STORE_PATH=./vector_store

# =============================================================================
# Data Pipeline Configuration
# =============================================================================
# How often to refresh data from Adobe Analytics (in seconds)
DATA_REFRESH_INTERVAL=3600

# Maximum number of documents to process
MAX_DOCUMENTS=10000

# =============================================================================
# Bedrock Knowledge Base Configuration (Optional)
# =============================================================================
# If using AWS Bedrock Knowledge Base instead of local vector store
BEDROCK_KNOWLEDGE_BASE_ID=your_knowledge_base_id_here
BEDROCK_DATA_SOURCE_ID=your_data_source_id_here

# =============================================================================
# Security Configuration
# =============================================================================
# Secret key for session management (generate a random string)
SECRET_KEY=your_secret_key_here

# JWT settings (if implementing authentication)
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# Monitoring and Logging
# =============================================================================
# Enable detailed logging
ENABLE_DETAILED_LOGGING=true

# Log file path
LOG_FILE_PATH=./logs/adobe_analytics_rag.log

# =============================================================================
# Development/Testing Configuration
# =============================================================================
# Skip expensive operations during development
SKIP_DATA_INGESTION=false
SKIP_VECTOR_STORE_BUILD=false

# Mock data for testing
USE_MOCK_DATA=false
MOCK_DATA_PATH=./data/mock_data.json
